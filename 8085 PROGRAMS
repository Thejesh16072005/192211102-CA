8-BIT MUL

LDA 8500
MOV B,A
LDA 8001
MOV C,A
CPI 00
JZ LOOP
XRA A
LOOP1: ADD E
DCR C
JZ LOOP
JMP LOOP1
LOOP: STA 8002
RST 1

8-BIT DIV

LDA 8501
MOV B,A
LDA 8500
MVI C,00
LOOP:CMP B
JC LOOP1
SUB B
INR C
JMP LOOP
STA 8503
DCR C
MOV A,C
LOOP1: STA 8502
RST 1

16-BIT MUL

LHLD 2050
         SPHL
         LHLD 2052
         XCHG
         LXI H,0000H
         LXI B,0000H
         AGAIN: DAD SP
         JNC START
         INX B
         START: DCX D
         MOV A,E
         ORA D
         JNZ AGAIN
         SHLD 2054
         MOV L,C
MOV H,B
SHLD 2055
HLT

16-BIT DIV

LDA 8501
MOV B,A
LDA 8500
MVI C,00
LOOP:CMP B
JC LOOP1
SUB B
INR C
JMP LOOP
STA 8503
DCR C
MOV A,C
LOOP1: STA 8502
RST 1

FACTORIAL

LDA 2001
MOV B,A
MVI C,#01
MVI E,#01
LOOP: MOV D,C
MVI A,00H
LP: ADD E
DCR D
JNZ LP
MOV E,A
INR C
DCR B
JNZ LOOP
MOV A,E
STA 2010
HLT

LARGEST NUMBER

LXI H,2050
MOV C,M
DCR C
INX H
MOV A,M
LOOP1: INX H
CMP M
JNC LOOP
MOV A,M
LOOP: DCR C
JNZ LOOP1
STA 2058
HLT

ASCENDING ORDER

LOOP: LXI H,3500
MVI D,00
MVI C,05
LOOP1: MOV A,M
INX H
CMP M
JC LOOP2
MOV B,M
MOV M,A
DCX H
MOV M,B
INX H
MVI D,01
LOOP2: DCR C
JNZ LOOP1
MOV A,D
RRC 
JC LOOP
HLT

ADDITION OF N NUMBERS

LOOP: LXI H,3500
MVI D,00
MVI C,05
LOOP1: MOV A,M
INX H
CMP M
JC LOOP2
MOV B,M
MOV M,A
DCX H
MOV M,B
INX H
MVI D,01
LOOP2: DCR C
JNZ LOOP1
MOV A,D
RRC 
JC LOOP
HLT

SWAPPING 

LDA 2001
MOV B,A
LDA 2002
MOV C,A
STA 2003
MOV A,B
STA 2004
HLT

SQUARE OF NUMBERS

LXI H,8000
XRA A
MOV B,M
LOOP: ADD M
DCR B
JNZ LOOP
STA 8001
HLT

